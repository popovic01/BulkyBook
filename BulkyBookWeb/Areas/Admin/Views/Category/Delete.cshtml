@model Category //it is not passed from the controller but we need Category model

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-outline-danger">
            Delete
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@*validation on client side*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

