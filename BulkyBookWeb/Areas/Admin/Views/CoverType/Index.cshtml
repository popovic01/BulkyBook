@model IEnumerable<CoverType> //captures the model we are passing from the controller
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-outline-light">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Cover Type
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="75%">
                        @obj.Name
                    </td>
                    <td>
                        <div class="col">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-outline-light btn-sm p-2"><i class="bi bi-pencil"></i>Edit</a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-outline-danger btn-sm p-2"><i class="bi bi-trash3"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
